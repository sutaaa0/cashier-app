generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String          @id @default(cuid())
  username String       @unique
  password String
  level     String
  penjualan Penjualan[]
}

model Produk {
  id              String               @id @default(cuid())
  nama            String
  harga           Int
  stok            Int
  detailPenjualan DetailPenjualan[]
}

model Penjualan {
  id              String               @id @default(cuid())
  tanggal         DateTime          @default(now())
  total_harga     Int
  user            User?             @relation(fields: [idUser], references: [id])
  idUser          String?
  detailPenjualan DetailPenjualan[]
}

model DetailPenjualan {
  id          String       @id @default(cuid())
  penjualan   Penjualan @relation(fields: [idPenjualan], references: [id])
  idPenjualan String
  produk      Produk    @relation(fields: [idProduk], references: [id])
  idProduk    String
  kuantitas   Int
  subtotal    Int
}
